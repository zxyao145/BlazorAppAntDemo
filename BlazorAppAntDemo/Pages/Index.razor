@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<br />
<br />

<Space>
  <SpaceItem>
    <Button Type="primary" OnClick="@(()=>{ this.isDialogVisible = true; })">
      Add Record
    </Button>
  </SpaceItem>
</Space>
<Space>
  <SpaceItem>
    <Button Type="primary" OnClick="@(()=>OnEditDiaryRecord())">
      Edit Record
    </Button>
  </SpaceItem>
</Space>
<Space>
  <Button Type="default" OnClick="this.Success">
    Success
  </Button>
</Space>

<Modal Title="Create new record"
       Style="width:80%"
       Visible="@this.isDialogVisible"
       Footer="null"
       Draggable="@(true)"
       OnCancel="(e)=>{this.isDialogVisible = false;}">
  <Form Model="this.DiaryRecordModel"
        Layout="@FormLayout.Vertical"
        OnFinish="(e) => this.OnCreateNewDiaryRecord()">
    <FormItem>
      <Record DiaryRecord=this.DiaryRecordModel />
    </FormItem>
    <FormItem WrapperColOffset="8" WrapperColSpan="16">
      <Button Type="@ButtonType.Primary" HtmlType="submit">
        Submit
      </Button>
      <Button OnClick="(e)=>{this.isDialogVisible = false;}">Cancel</Button>
    </FormItem>
  </Form>
</Modal>
